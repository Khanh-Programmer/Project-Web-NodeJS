extend ../../layouts/default.pug
include ../../mixins/alert.pug

block head 
     link(rel="stylesheet", href="/admin/css/pageAddNewProduct.css")
block main 
     +alert-error(5000)
     +alert-success(5000)
     .container 
          h1 Chỉnh sửa sản phẩm
          form(
               action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH` 
               id='form-edit-product' 
               method='POST' 
               enctype="multipart/form-data"
          ) 
               div(class='form-group')
                    label(for='title') Tiêu đề 
                    input(
                         type='text',
                         class='form-control',
                         id='title',
                         name='title',
                         required 
                         value=product.title
                    ) 
               div(class='form-group')
                    label(for='desc') Mô tả
                    textarea(
                         class='form-control',
                         id='desc',
                         name='description',
                         rows='5'
                    ) #{product.description}
               div(class='form-group')
                    label(for='price') Giá
                    input(
                         type='number',
                         class='form-control',
                         id='price',
                         name='price',
                         value=product.price
                         min='0',
                         step='any' 
                    )
               div(class='form-group')
                    label(for='discount') Giảm giá (%)
                    input(
                         type='number',
                         class='form-control',
                         id='discount',
                         name='discountPercentage',
                         value=product.discountPercentage
                         min='0',
                         step='any' 
                    )
               div(class='form-group')
                    label(for='stock') Số lượng
                    input(
                         type='number',
                         class='form-control',
                         id='stock',
                         name='stock',
                         value=product.stock
                         min='0'
                    )
               div(class='form-group' upload-image)
                    label(for='thumbnail') Hình ảnh
                    input(
                         type='file',
                         class='form-control',
                         id='thumbnail',
                         name='thumbnail',
                         accept='image/*' 
                         upload-image-input
                    ) 
                    div.image-container
                         img(
                              src=product.thumbnail
                              upload-image-preview
                              class='image-preview'
                         )
                         span(class='remove-image') X
               div(class='form-group') 
                    label(for='position') Vị trí
                    input(
                         type='number',
                         class='form-control',
                         id='position',
                         name='position',
                         placeholder='Tự động tăng',
                         min='1', 
                         value=product.position
                    ) 
               div(class='form-group form-check form-check-inline')
                    input(
                         type='radio', 
                         class='form-check-input',
                         id='statusActive', 
                         name='status', 
                         value='active',
                         checked=(product.status === 'active' ? true : false)
                    ) 
                    label(for='statusActive' class='form-check-label') Hoạt động  
               div(class='form-group form-check form-check-inline')
                    input(
                         type='radio', 
                         class='form-check-input',
                         id='statusInactive', 
                         name='status', 
                         value='inactive',
                         checked=(product.status === 'inactive' ? true : false)
                    ) 
                    label(for='statusInactive' class='form-check-label') Không hoạt động 
               div(class='form-group') 
                    button(
                         type='submit',
                         class='btn btn-primary'
                    ) Cập nhật sản phẩm

     script(src='/admin/js/product.js')