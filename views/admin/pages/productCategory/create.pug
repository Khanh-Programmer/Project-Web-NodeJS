extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block head 
     link(rel="stylesheet", href="/admin/css/pageCreateProductCategory.css")
block main 
     h1.mb-4 Thêm danh mục sản phẩm 

     +alert-error(5000) 
     .container 
          form(
               action=`${prefixAdmin}/products-category/create`, 
               method="POST",
               enctype="multipart/form-data"
          ) 
               //- Tên danh mục
               .form-group 
                    label(for='title') Tên danh mục sản phẩm 
                    input#title.form-control(
                         type='text',
                         name='title',
                         required 
                    ) 
               div(class='form-group') 
                    label(for='parent_id') Danh mục cha
                    select(
                         name='parent_id', 
                         id='parent_id',
                         class='form-control'
                    ) 
                         option(value='') Chọn danh mục cha 
                         if(records) 
                              each record in records
                                   option(value=record.id) #{record.title}
               //- Mô tả
               .form-group 
                    label(for='desc') Mô tả danh mục sản phẩm 
                    textarea.textarea-mce#desc.form-control(
                         name='description',
                         rows='5',
                         required
                    )  

               //- Ảnh đại diện
               .form-group(upload-image) 
                    label(for='thumbnail') Ảnh đại diện 
                    input#thumbnail.form-control-file(
                         type='file',
                         name='thumbnail',
                         accept='image/*',
                         upload-image-input
                    ) 
                    .image-wrapper
                         img.image-preview(
                              src='',
                              upload-image-preview
                         )
                         span.remove-image ×

               //- Vị trí
               .form-group 
                    label(for='position') Vị trí
                    input#position.form-control(
                         type='number',
                         name='position',
                         placeholder='Tự động tăng',
                         min='1'
                    ) 

               //- Trạng thái hoạt động
               .form-group.form-check.form-check-inline
                    input#statusActive.form-check-input(
                         type='radio', 
                         name='status', 
                         value='active',
                         checked
                    ) 
                    label.form-check-label(for='statusActive') Hoạt động  

               .form-group.form-check.form-check-inline
                    input#statusInactive.form-check-input(
                         type='radio', 
                         name='status', 
                         value='inactive'
                    ) 
                    label.form-check-label(for='statusInactive') Không hoạt động  

               //- Nút submit
               button.btn.btn-success(type='submit') Thêm mới  
     script(src="/admin/js/pageCreateProductCategory.js") 
