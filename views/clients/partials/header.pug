header.header 
    .container 
        .row
            .col-3
                .inner-logo 
                    a(href="/") 
                        img(src="/clients/images/logo.svg", alt="Logo")

            .col-9 
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Trang chủ
                        li 
                            a(href="/products") Sản phẩm

style.
    /* ===== HEADER ===== */
    header.header {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        height: 80px;
        position: sticky;
        top: 0;
        z-index: 1000;
        padding: 20px; /* fix lỗi khoảng trắng */
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    }

    /* căn logo + menu ngang hàng */
    header.header .row {
        display: flex;
        align-items: center; /* cho logo và menu thẳng hàng */
    }

    /* logo */
    header.header .inner-logo img {
        max-height: 60px;
        display: block;
    }

    /* menu */
    header.header .inner-menu {
        width: 100%;
    }

    header.header .inner-menu ul {
        display: flex;
        justify-content: flex-end; /* đẩy menu sang phải */
        gap: 25px;
        margin: 0;
        padding: 0;
        list-style: none;
    }

    header.header .inner-menu ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 20px;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    /* hover màu vàng */
    header.header .inner-menu ul li a:hover {
        color: #FFD700;
    }
